<h1> Welcome on your Dashboard as a Mentor </h1>
<%= month_calendar do |date| %>
  <%= date %>
<% end %>

<%= month_calendar(events: @meetings) do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>
    <div class="meeting">  <-- We will add some style to the meeting class later so let's add it now -->
      <p><%= meeting.name %></p>
    </div>
  <% end %>
<% end %>


<% @bookings_as_mentor.each do |booking| %>
<p>Booked by </p>
<%= User.find(booking.user_id).email %>
<p>From: </p>
<%= booking.start_date %>
<p>to: </p>
<%= booking.end_date %>
<% end %>
